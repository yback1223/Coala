<% layout('layouts/boilerplate'); %>

<div class="row">
    <h1 class="text-center">Setting</h1>
    <div class="col-6 offset-3">
        <form action="/coala/setting" method="POST" novalidate class="validated-form">
            <div class="mb-3 col">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="email@example.com">
                </div>
            </div>
            <div class="mb-3 col">
                <label for="inputPassword" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticUsername" value="exampleUsername">
                </div>
            </div>
            <div class="mb-3 col">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" required>
                </div>
            </div>
            <button class="btn btn-secondary btn-sm">Delete Account</button>
        </form>
    </div>
</div>
